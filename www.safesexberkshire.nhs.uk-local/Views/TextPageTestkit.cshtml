@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}
<div class="row padding container">
	<div class="col-xs-12">
		@{ Html.RenderPartial("Breadcrumbs"); }
		<h1>@Umbraco.Field("pageName")</h1>
	</div>
</div>
<div class="row padding container">
  <div class="col-xs-12">
    <p>If you live in Reading or Bracknell Forest you can get a free HIV test at your local sexual health service – see the clinic finder to locate your nearest Sexual Health Service where a full range of STI testing is available.</p>
    <p>You can order free HIV self sampling kits here. Please note that free test kits are available for adults living in Slough, West Berkshire, Wokingham and the Royal Borough of Windsor and Maidenhead.</p>
  </div>
  <div class="col-xs-12 col-sm-6">
    <a class="LocQue" href="http://www.timetotest.org.uk/postal-testing.php" target="_blank">If you live in West Berkshire click here to order a kit</a>
  </div>
  <div class="col-xs-12 col-sm-6">
    <a class="LocQue" id="WbrN">If you live in Slough, Royal Borough of Windsor and Maidenhead or Wokingham please order a kit here</a>
  </div>
</div>

<div class="row padding container">
  @* Section that's revealed on 'Yes' selection
  !!! Completely removed. Link goes directly to HIV test kit !!!
  <div class="col-xs-12 col-sm-6 TimeToTest">
    <p>Please visit this site to order a HIV test kit: <a href="http://www.timetotest.org.uk/postal-testing.php" target="_blank">http://www.timetotest.org.uk/postal-testing.php</a></p>
  </div>
  End 'Yes' section *@
  @* Section that's revealed on 'No' selection *@
	
  <div class="col-xs-12 col-sm-6 col-sm-offset-6 TestHiv">
    <form name="HivTestkit" action="https://www.test.hiv/" method="get" target="_blank">
      <h2>HIV Testing Kit</h2>
      <span class="testkit-date">Age:</span><input type="number" name="age" class="testkit-datepicker" id="" required><br>
      <span class="testkit-pc ">Postcode:</span><input type="text" name="postcode" class=""  required><br>
      <input type="submit" name="submit" class="testkit-submit" value="Submit">
      <img src="/Images/testhiv_logo2-160x50.png" alt="Test HIV Logo"><br>
  	  <p>Please visit this site for more information: <a href="https://www.test.hiv" target="_blank">www.test.hiv</a> <span class="glyphicon glyphicon-new-window"></span></p>
    </form>
  </div>
  @* End 'No' section *@

  <div class="col-xs-12">
    <p>Not sure which local authority you live in? <a href="http://local.direct.gov.uk/LDGRedirect/Start.do?mode=1" class="AreaCheck newWindow" target="_blank">Find your local authority</a></p>
  </div>

</div>

<div class="row padding">
	<div class="col-xs-12">
		@Umbraco.Field("bodyText")
	</div>
</div>
